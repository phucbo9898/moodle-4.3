{{!
    @template local_invitation/invitation_note

    A template printing a note as flex.

    Context variables required for this template:
    * note - String

    Example context (json):
    {
        "note": "Success"
    }
}}

<div class="d-flex mb-3">
    <div><i class="fa fa-info-circle fa-lg text-primary pr-2"></i></div>
    <div class="flex-fill">{{{note}}}</div>
</div>
